/* main/pages/save/save.wxss */
page{
  background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100vh;
    width: 100vw;
}
.container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  width: 100%;
  height: 405rpx;
  background: #F4F4F4;
  display: flex;
  box-sizing: border-box;
  
  flex-direction: column;
  padding: 0 88rpx;
  padding-bottom: 67rpx;
  justify-content: space-between;
}
.header>text{
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  font-family: Helvetica;
  color: #614C16;
  line-height: 36rpx;
  padding-top: 60rpx;
}

.header>view{
  display: flex;
  justify-content: space-between;
}

.header>view>view{
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.header .title{
  font-size: 30rpx;
  font-family: Helvetica;
  color: #614C16;
  line-height: 36rpx;
  margin-bottom: 7rpx;
  
}
.header .cube{
  height: 150rpx;
  width: 150rpx;
  background: #F4CC66;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-family: Helvetica;
  color: #262626;
  line-height: 31rpx;
}

.header .cube1{
  background: #1D1D1D;
  font-size: 26rpx;
  font-family: Helvetica;
  color: #F4CC66;
  line-height: 31rpx;
}

.header .cube span{
  font-size:30rpx;
  margin-top: 17rpx;
}
.header .cube.disabled{
  opacity: 0.5;
  pointer-events: none;
}

.main{
  flex: 1;
}
.main .phone-input{
  display: flex;
  flex-direction: column;
}

.main .phone-input>view{
  display: flex;
}

.phone{
  display: flex;
  width: 375rpx;
  height: 79rpx;
  background: #F6F6F6;
  border-radius: 5rpx;
  border: 1rpx solid #C1C1C1;
  /* padding-left: 19rpx; */
  color: #2E2D2D;
  font-family: Helvetica;
  font-size: 28rpx;
  box-sizing: border-box;
}
.phone van-cell,.name van-cell,.input van-cell{
  width: 100%;
}
.phone .van-cell,.name .van-cell,.input .van-cell{
  padding: 0;
  width: 100%;
  height: 100%;
  padding: 19rpx;
}
.placeholder{
  font-size: 24rpx;
  font-family: Helvetica;
  color: #AEAEAE;
  line-height: 29rpx;
}

.name{
  width: 218rpx;
  height: 79rpx;
  background: #F6F6F6;
  border-radius: 5rpx;
  border: 1rpx solid #C1C1C1;
  margin-left: 33rpx;
  /* padding-left: 19rpx; */
  font-family: Helvetica;
  color: #2E2D2D;
  font-size: 28rpx;
  box-sizing: border-box;
}
.tip{
  font-size: 18rpx;
  font-family: Helvetica;
  color: #818181;
  line-height: 22rpx;
  height: 25rpx;
  margin-top: 11rpx;
  display: flex;
  align-items: center;
}

.tip text:not(.tip-word){
  display: flex;
  font-size: 26rpx;
  font-family: Helvetica;
  color: #E60000;
  line-height: 38rpx;
  margin-right: 4rpx;
  align-items: flex-start;
}

.order-number{
  margin: 38rpx 0;
  display: flex;
}
.order-remark{
  display: flex;
}
.input{
  width: 624rpx;
  height: 79rpx;
  background: #F6F6F6;
  border-radius: 5rpx;
  border: 1rpx solid #C1C1C1;
  /* padding-left: 19rpx; */
  box-sizing: border-box;
  font-family: Helvetica;
  color: #2E2D2D;
  font-size: 28rpx;
}

.order-remark .input{
  height: auto;
}

.submit-button{
  margin-top: 76rpx;
  width: 626rpx !important;
  height: 110rpx;
  background-color: #F4CC66 !important;
  border-radius: 5rpx;
  box-sizing: border-box !important;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button-hover{
  background: rgba(244, 204, 102, 1) !important;
  opacity: 0.7;
}

.submit-button[aria-disabled=true]{
  background-color: #CDCBCB !important; 
  color: #2F2F2F !important;
  font-size: 22rpx;
  /* opacity: 1; */
}